{
  "name": "react-idle-timer",
  "version": "4.5.2",
  "description": "Activity detection for React.js",
  "main": "dist/index.min.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c && cp src/index.d.ts dist/index.d.ts",
    "watch": "rollup -c -w",
    "clean": "rimraf dist coverage",
    "lint": "standard lint",
    "fix": "standard --fix",
    "test": "npm run lint && jest",
    "prepackage": "npm run clean && npm run test && npm run build",
    "package": "./scripts/package",
    "example-install": "cd examples/component && npm i && cd ../hook && npm i && cd ../component-ts && npm i && cd ../hook-ts && npm i",
    "example-component": "cd examples/component && npm start",
    "example-hook": "cd examples/hook && npm start"
  },
  "keywords": [
    "react",
    "idle",
    "idle timer",
    "timer",
    "activity",
    "active",
    "timeout",
    "session",
    "session expiration",
    "session timeout"
  ],
  "author": "Randy Lebeau <randylebeau@gmail.com> (https://github.com/supremetechnopriest)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/supremetechnopriest/react-idle-timer.git"
  },
  "peerDependencies": {
    "prop-types": ">=15",
    "react": ">=16",
    "react-dom": ">=16"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@rollup/plugin-babel": "^5.1.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@testing-library/react-hooks": "^3.3.0",
    "babel-jest": "^26.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "jest": "^26.1.0",
    "jest-esm-transformer": "^1.0.0",
    "prompt-list": "^3.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "regenerator-runtime": "^0.13.7",
    "rimraf": "^3.0.2",
    "rollup": "^2.21.0",
    "rollup-plugin-terser": "^6.1.0",
    "simulant": "^0.2.2",
    "sinon": "^9.0.2",
    "standard": "^14.3.4"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/examples/"
    ],
    "setupFiles": [
      "./test.setup.js"
    ],
    "collectCoverage": true
  },
  "standard": {
    "globals": [
      "beforeEach",
      "describe",
      "it",
      "expect"
    ]
  }
}
